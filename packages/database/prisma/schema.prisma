datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
  // referentialIntegrity = "prisma"
}

generator client {
  provider = "prisma-client-js"
  // previewFeatures = ["referentialIntegrity"]
}

model Race {
  id          String   @id @default(cuid())
  name        String
  date        DateTime @unique
  location    String
  race        String
  setter      String
  management  String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Team {
  id        String   @id @default(cuid())
  fullname  String   @unique
  shortname String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  racers    Racer[]
}

model Racer {
  id               String        @id @default(cuid())
  name             String
  kana             String
  event            String // ski, snowboard
  bib              Int           @unique
  gender           String // f, m
  seed             Int
  teamId           String?
  firstParticipate Boolean
  age              Int?
  createdAt        DateTime      @default(now())
  updatedAt        DateTime      @updatedAt
  team             Team?         @relation(fields: [teamId], references: [id])
  results          RacerResult[]
}

model RacerResult {
  id        String   @id @default(cuid())
  set       Int
  time      Int?
  status    String? // ds, dq, df
  racerId   String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  racer     Racer    @relation(fields: [racerId], references: [id])

  @@unique([set, racerId])
}
